{
	"schemaVersion": 1,
	"id": "creepermilk",
	"version": "${version}",
	"name": "Creeper Milk",
	"description": "A mod that lets you milk creepers! Right-click a creeper with an empty bucket to obtain a unique green-tinted milk.",
	"authors": [
  	"Casebycaseworks"
	],
		"contact": {
  		"homepage": "",
  		"issues": "https://github.com/Casebycaseworks/creepermilk/issues",
  		"sources": "https://github.com/Casebycaseworks/creepermilk"
	},
	"license": "MIT",
	"icon": "assets/creepermilk/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			{
				"value": "milk.creeper.Creepermilk",
				"adapter": "kotlin"
			},
			"milk.creeper.CreepermilkItems"
		],
		"client": [
			{
				"value": "milk.creeper.CreepermilkClient",
				"adapter": "kotlin"
			}
		]
	},
	"mixins": [
		"creepermilk.mixins.json",
		{
			"config": "creepermilk.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.20.4",
		"java": ">=17",
		"fabric-api": "*",
		"fabric-language-kotlin": "*"
	},
	"suggests": {}
}